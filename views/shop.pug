extends layouts/main-layout.pug
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card-header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://th.bing.com/th/id/OIP.JP1-NQ8tAwPQo-NPyhXZlgHaKf?w=121&h=180&c=7&o=5&dpr=2&pid=1.7", alt="A book")
                        div.card__content 
                            h2.product__price $0.99
                            p.product__description A book with knowledge! 
                        .card__actions 
                            button.btn Add to Cart
        else
            h1 No Product